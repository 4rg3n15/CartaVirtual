<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAE0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Logo o Imagen -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="52dp" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <!-- Campo de Correo Electrónico -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/perfil"
            android:drawablePadding="10dp"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Campo de Contraseña -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:drawableLeft="@drawable/ver_cont"
            android:drawablePadding="10dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Botón de Iniciar Sesión -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#BC6C25"
            android:padding="12dp"
            android:text="Iniciar Sesión"
            android:textColor="@android:color/white" />

        <!-- Botón de Registrarse -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#283618"
            android:padding="12dp"
            android:text="Registrarse"
            android:textColor="@android:color/white" />

        <!-- Texto para alternar entre inicio de sesión y registro -->
        <TextView
            android:id="@+id/switchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:text="¿No tienes una cuenta? Regístrate"
            android:textSize="22dp" />
    </LinearLayout>
</ScrollView>
